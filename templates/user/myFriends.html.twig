{% extends "base.html.twig" %}
{% block body %}
<h1 class="h1-profil-user">Mes amis</h1>
	<ul>
		{% for friend in user.friends %}
			<li>
				<img src="{{ asset('/uploads/' ~ friend.avatar) }}" style = "width : 5rem; height: 5rem;">
				<a href="{{ path('user_show', {"id": friend.id}) }}">{{friend.firstname ~ ' ' ~ friend.lastname}}</a>
			</li>
		{% else %}
			<p>pas d'amis :'(</p>
		{% endfor %}
	</ul>
    <div>
    <h2>Chercher utilisateur</h2>
    {{ include('user/_search_form.html.twig') }}
    </div>
{% endblock %}

