{% extends "base.html.twig" %}

{% block body %}
<ul>
{% for user in users %}
<li>
    <img src="{{ asset('/uploads/' ~ user.avatar) }}" style = "width : 10rem; height:auto;">
    <h2><a href="{{ path('user_show', {"id": user.id}) }}">{{user.firstname ~ ' ' ~ user.lastname}}</a></h2>
</li>
{% endfor %}
</ul>
{% endblock %}