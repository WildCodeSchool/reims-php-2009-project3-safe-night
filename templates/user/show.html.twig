{% extends 'base.html.twig' %}

{% block title %}{{ user.firstname }} {{ user.lastname }}{% endblock %}

{% block body %}
<body class="safeNightGray">

	<div class="profil-pic-section">
		<img class="profil-pic" src="{{ asset('/uploads/' ~ user.avatar) }}"/>
	</div>

	<h1 class="h1-profil-user">{{ user.firstname }} {{ user.lastname }}	</h1>

	<table class="user-profil">
		<tbody>
			{# <tr>
				<th>Prénom:</th>
				<td>{{ user.firstname }}</td>
			</tr>
			<tr>
				<th>Nom de famille:</th>
				<td>{{ user.lastname }}</td>
			</tr> #}
			<tr>
				<th>Email :</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Numéro de téléphone :</th>
				<td>{{ user.phoneNumber }}</td>
			</tr>
			<tr>
				<th>Date de naissance :</th>
				<td>{{ user.birthday|date('d/m/Y') }}</td>
			</tr>
			<tr>
				<th>Adresse :</th>
				<td>{{ user.address }}</td>
			</tr>
		</tbody>
	</table>

	<div class="edit-delete-section">
		<a class="user-button" href = "{{ path('app_logout') }}">Déconnexion</a>
		<a class="user-button" href="{{ path('user_edit', {'id': user.id}) }}">Modifier le profil</a>
		<a class="user-button">CGU et CGV</a>
		{{ include('user/_delete_form.html.twig') }}
	</div>


{% endblock %}
