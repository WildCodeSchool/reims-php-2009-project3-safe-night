{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="profil-pic-section">
        <img class="profil-pic" src="{{ asset('build/images/usericon.png') }}" alt="user-icon"/>
    </div>

    <h1 class="h1-profil-user">Mon compte</h1>

    <table class="user-profil">
        <tbody>
            <tr>
                <th>Prénom:</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Nom de famille:</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Date d'anniversaire:</th>
                <td>{{ user.birthday }}</td>
            </tr>
            <tr>
                <th>Email:</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Numéro de téléphone: </th>
                <td>{{ user.phoneNumber }}</td>
            </tr>
        </tbody>
    </table>

<div class="edit-delete-section">
    <a class="disconnect-profil">Déconnection</a>
    <a class="edit-profil" href="{{ path('user_edit', {'id': user.id}) }}">Modifier le profil</a>
    <a class="cgu-profil">CGU et CGV</a>
    <a class="delete-profil" href="{{ path('user_delete', {'id': user.id}) }}">Supprimer le profil</a>
</div>

    {#{{ include('user/_delete_form.html.twig') }}#}
{% endblock %}
