{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<div class="profil-pic-section">
		<img class="profil-pic" src="{{ asset('/uploads/' ~ user.avatar) }}"/>
	</div>

	<h1 class="h1-profil-user">Mon compte</h1>

	<table class="user-profil">
		<tbody>
			<tr>
				<th>Prénom:</th>
				<td>{{ user.firstname }}</td>
			</tr>
			<tr>
				<th>Nom de famille:</th>
				<td>{{ user.lastname }}</td>
			</tr>
			<tr>
				<th>Date d'anniversaire</th>
				<td>{{ user.birthday|date('d-m-Y') }}</td>
			</tr>
			<tr>
				<th>Email:</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Numéro de téléphone:
				</th>
				<td>{{ user.phoneNumber }}</td>
			</tr>
			<tr>
				<th>Adresse</th>
				<td>{{ user.address }}</td>
			</tr>
		</tbody>
	</table>

	<div class="edit-delete-section">
		<a class="disconnect-profil" href = "{{ path('app_logout') }}">Déconnection</a>
		<a class="edit-profil" href="{{ path('user_edit', {'id': user.id}) }}">Modifier le profil</a>
		<a class="cgu-profil">CGU et CGV</a>
		{{ include('user/_delete_form.html.twig') }}
	</div>


{% endblock %}
