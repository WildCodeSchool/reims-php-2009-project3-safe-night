{% extends 'base.html.twig' %}

{% block title %}Mes évènements{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <section >
        <img class="my-events-banner" src="{{ asset('build/images/my-events.jpg') }}" alt="my-events-banner"/>
        <h1 class="my-events-title">MES ÉVÈNEMENTS</h1>
    </section>

    <div class="my-events-content example-wrapper">
        <ul class="event-list">
            <li class="new-event"><a href="{{ path('event_new') }}">+ Nouvel évènement</a></li>
        {% for event in events %}
            <li class="event"><a href="{{ path('event_show', {id: event.id}) }}">{{event.name}}</a></li>
        {% endfor %}
        </ul>
    </div>
{% endblock %}
