{% extends 'base.html.twig' %}

{% block title %}Mes évènements{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <section class="my-events-banner" style = "background-image: url('{{ asset('build/images/my-events.jpg') }}')">
        <h1 class="my-events-title"><strong>MES ÉVÈNEMENTS</strong></h1>
    </section>

    <div class="my-events-content example-wrapper">
        <ul class="event-list">
        {% for event in events %}
            <li class="event" style = "background-image: url('{{ asset('/uploads/' ~ event.image) }}')"><a href="{{ path('event_show', {id: event.id}) }}" >{{event.name}}<p class="event-timer-tuile">du {{ event.datetimeStart ? event.datetimeStart|date('d/m/Y H:i') : '' }} au {{ event.datetimeEnd ? event.datetimeEnd|date('d/m/Y H:i') : '' }}</p></a></li>
        {% endfor %}
        </ul>
    </div>
{% endblock %}
