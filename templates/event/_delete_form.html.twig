<form method="post" action="{{ path('event_delete', {'id': event.id}) }}" onsubmit="return confirm('Supprimer l'évènement est irréversible : vous confirmez ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
    <button class="user-button-red delete-button-edit">Supprimer l'évènement</button>
</form>
