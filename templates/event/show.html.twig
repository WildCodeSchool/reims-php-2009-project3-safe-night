{% extends 'base.html.twig' %}

{% block title %}{{ event.name }}{% endblock %}

{% block body %}
    <div>
        <img class="banner-eventShow" src="{{ asset('/build/uploads/' ~ event.image) }}" />
        <h1 class = "eventShow-title">{{ event.name }}</h1>
    </div>
    <p class = "eventShow-item"><i>{{ event.description }}</i></p>
    <div class = "showItem from">
        <h2>Du</h2>
        <p class = "eventShow-item">{{ event.datetimeStart ? event.datetimeStart|date('d-m-Y H:i') : '' }}</p>
    </div>
    <div class = "showItem to">
        <h2>Au</h2>
        <p class = "eventShow-item">{{ event.datetimeEnd ? event.datetimeEnd|date('d-m-Y H:i') : '' }}</p>
    </div>
    <div class = "showItem location">
        <img class = "icon" src = "{{ asset('build/images/location.png') }}">
        <p class = "eventShow-item">{{ event.place }}</p>
    </div>
    <div class = "button-container">
        <a class = "btn" href="{{ path('event_index') }}">Retour Ã  la Liste</a>
        <a class = "btn" href="{{ path('event_edit', {'id': event.id}) }}">modifier</a>
    </div>
    <div class = "button-container">
    {{ include('event/_delete_form.html.twig') }}
    </div>
{% endblock %}
