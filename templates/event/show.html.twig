{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Event</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ event.name }}</td>
            </tr>
            <tr>
                <th>Theme</th>
                <td>{{ event.theme }}</td>
            </tr>
            <tr>
                <th>Datetime_start</th>
                <td>{{ event.datetimeStart ? event.datetimeStart|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Datetime_end</th>
                <td>{{ event.datetimeEnd ? event.datetimeEnd|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Place</th>
                <td>{{ event.place }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('event_index') }}">back to list</a>

    <a href="{{ path('event_edit', {'id': event.id}) }}">edit</a>

    {{ include('event/_delete_form.html.twig') }}
{% endblock %}
