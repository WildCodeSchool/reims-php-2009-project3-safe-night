<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <link rel="icon" type="image/png" href="{{ asset('build/images/favicon.png') }}" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    

    {% block header %}{% include '_header.html.twig' %}{% endblock %}

    {% block body %}{% endblock %}
    {% block navigation %}{% include '_navigation.html.twig' %}{% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        <script>
            document.getElementById('searchField').addEventListener('input', function(event) {
            const query = event.target.value;
            fetch('https://localhost:8000/user/autocomplete?q=' + query)
                .then(response => response.json())
                .then(json => {
                    let resultHtml = "";
                    json.forEach(user => {
                        resultHtml = resultHtml + `
                        <li><a href = "/user/${user.id}">${user.firstname ~ user.lastname}</a></li>
                    `;
                    });

                document.querySelector('#autocomplete').innerHTML = resultHtml;
                })
                .catch(() => alert('error'));

            });
        </script>
        <script>
            function unscrollFunction() {
                document.querySelector('#footer').style.position = "static";
            }
            function scrollFunction() {
                document.querySelector('#footer').style.position = "fixed";
                setTimeout(unscrollFunction, 3000);
            }

            window.onscroll = scrollFunction;
        </script> 
    {% endblock %}
</body>
</html>
